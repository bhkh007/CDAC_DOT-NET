@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        .carousel-item {
            height: 60vh;
        }

            .carousel-item img {
                object-fit: cover;
                height: 60vh;
            }

        .carousel-caption {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 1rem;
            border-radius: 5px;
        }

        .card {
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="text-center py-5">
            <h1 class="display-4">Welcome to Motion Mint Car Rental</h1>
            <p class="lead">Explore the best car rental experience with Motion Mint. Book your ride today!</p>
        </div>

        <!-- Carousel -->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://example.com/car1.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Explore Our Fleet</h5>
                        <p>Discover a wide range of vehicles tailored to your needs.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://example.com/car2.jpg" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Easy Booking Process</h5>
                        <p>Book your car in just a few clicks with our user-friendly interface.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://example.com/car3.jpg" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Quality Service Guaranteed</h5>
                        <p>Experience top-notch service and support throughout your journey.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Cards -->
        <div class="row mt-5">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="https://example.com/card1.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Affordable Pricing</h5>
                        <p class="card-text">Our competitive pricing ensures you get the best value for your money.</p>
                        <a href="#" class="btn btn-primary">View Offers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="https://example.com/card2.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">24/7 Customer Support</h5>
                        <p class="card-text">Our dedicated support team is available around the clock to assist you.</p>
                        <a href="#" class="btn btn-primary">Contact Us</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="https://example.com/card3.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Flexible Rental Options</h5>
                        <p class="card-text">Choose from daily, weekly, or monthly rental plans that suit your schedule.</p>
                        <a href="#" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"
            integrity="sha384-hVFv7YMuBFRFi6Fvjt3uK4L/lm/AOjPCotQfFjw/J9pIu50S6ap9kRuH6kVfww/g"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
            integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+Wy2Fm8L+sd2au0M0PC5awIIJqj5/t9sUBH"
            crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>

</body>
</html>
