@model Motion_Mint.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Customer Details</h1>

            <div>
              
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Customer Name:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Custname)</dd>

                    <dt class="col-sm-3">Address:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-3">Mobile:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Mobile)</dd>
                </dl>
            </div>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
