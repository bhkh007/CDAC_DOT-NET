@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    @using (Html.BeginForm("Save", "Returncar", FormMethod.Post, new { id = "popupForm" }))
    {
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Car Rental</h1>

                <div class="form-group">
                    <label class="form-label">Car Number</label>
                    <input type="text" id="carid" name="carid" class="form-control" placeholder="Car Number" required>
                    
                </div>

                <div class="form-group">
                    <label class="form-label">Customer ID</label>
                    <input type="text" id="custid" name="custid" class="form-control" placeholder="Customer ID" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Date</label>
                    <input type="date" id="date" name="date" class="form-control" placeholder="Customer Name" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Days Elapsed</label>
                    <input type="text" id="elsp" name="elsp" class="form-control" placeholder="Rental Fee" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Fine</label>
                    <input type="text" id="fine" name="fine" class="form-control" placeholder="Start Date" required>
                </div>

                <br />
                <div class="text-center">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>

            </div>
        </div>
    }
</div>



