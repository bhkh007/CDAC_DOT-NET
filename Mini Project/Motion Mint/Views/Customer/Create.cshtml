@model Motion_Mint.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Create Customer</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Customer Information</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Custname" class="control-label">Customer Name</label>
                    <input asp-for="Custname" class="form-control" />
                    <span asp-validation-for="Custname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mobile" class="control-label">Mobile</label>
                    <input asp-for="Mobile" class="form-control" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
