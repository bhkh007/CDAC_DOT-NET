@model Motion_Mint.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Delete Customer</h1>

            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Are you sure you want to delete this customer?</h4>
                <p>This action cannot be undone. Please confirm your decision.</p>
            </div>

            <div>
                <h4>Customer Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Customer Name:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Custname)</dd>

                    <dt class="col-sm-3">Address:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-3">Mobile:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Mobile)</dd>
                </dl>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
